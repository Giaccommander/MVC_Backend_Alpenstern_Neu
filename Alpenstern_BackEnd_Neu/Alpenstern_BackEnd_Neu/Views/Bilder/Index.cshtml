@model IEnumerable<Alpenstern_BackEnd_Neu.Models.BilderVM>

@{
    ViewBag.Title = "Bilder Übersicht und Verwaltung";
}

<h2>Bilder Übersicht und Verwaltung</h2>

<p><br />
    @Html.ActionLink("Einzel Bilder Hinzufügen", "Create")
    
</p><br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.bilderart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pfad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.bilderart)
        </td>
        <td>
            <img src="@item.pfad" alt="Alternate Text" height="100"/>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
