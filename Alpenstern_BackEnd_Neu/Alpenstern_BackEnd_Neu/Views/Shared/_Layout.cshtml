<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meine ASP.NET-Anwendung</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="description" content="The description of my page" />
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (!Context.User.Identity.IsAuthenticated)
                {
                    <a class="navbar-brand" href="/Home/Index">Login</a>
                }
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                @if (Context.User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li><div><h2>@User.Identity.Name</h2></div></li>
                        <li><a href="/Mitarbeiter/Index">MA Anlegen<span class="sr-only">(current)</span></a></li>
                        <li><a href="#">Dashboard<span class="sr-only">(current)</span></a></li>
                        <li><a href="#">Buchungen<span class="sr-only">(current)</span></a></li>
                        <li><a href="#">Abreise<span class="sr-only">(current)</span></a></li>
                        <li><a href="#">Ankunft<span class="sr-only">(current)</span></a></li>                      
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Rückruf<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/Rueckruf/Index">Rückrufe bearbeiten<span class="sr-only">(current)</span></a></li>
                                <li><a href="/Rueckruf/rueckrufBearbeitetListe">Rückrufe bearbeitet<span class="sr-only">(current)</span></a></li>                               
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Preise bearbeiten<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Restaurant<span class="sr-only">(current)</span></a></li>
                                <li><a href="#">Spa - Wellness<span class="sr-only">(current)</span></a></li>
                                <li><a href="#">Zimmer<span class="sr-only">(current)</span></a></li>
                                <li><a href="#">Specials<span class="sr-only">(current)</span></a></li>
                            </ul>
                        </li>
                        <li class="active"><a href="/Home/Logout">Logout <span class="sr-only">(current)</span></a></li>
                    </ul>
                }
            </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p></p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
