@model Alpenstern_BackEnd_Neu.Models.PersonDatenVM
@{
    ViewBag.Title = "Persoenlichdaten";
}

<h2>Persönliche Daten</h2>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
    $(function () {
        var cities = $('#stadtliste');


        $('#LandListe').change(function () {
            $.getJSON(url = "/Buchung/Ajax", data = { LandName: $(this).val() },
                function (response) {
                    cities.empty();
                    $.each(response, function (index, item) {
                        cities.append($("<option></option>").text(item.Text).val(item.ID));
                    });
                })
        });
    });

</script>



