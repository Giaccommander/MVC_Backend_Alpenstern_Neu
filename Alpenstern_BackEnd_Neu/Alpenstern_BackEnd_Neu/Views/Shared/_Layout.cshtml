<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meine ASP.NET-Anwendung</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="description" content="The description of my page" />
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home/Index">Login</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/Buchung/DatumEingabe">Buchen</a></li>
                    <li><a href="/Authentifizierung/MitarbeiterAnlegen">MA Anlegen</a></li>
                    <li><a href="/Druckansicht/Index">Dashboard</a></li>
                    <li><a href="/Buchung/Index">Buchungen</a></li>
                    <li><a href="/Abreise/Index">Abreise</a></li>
                    <li><a href="/Home/Ankunft">Ankunft</a></li>
                    <li><a href="/Home/Rueckruf">Rückruf</a></li>
                                       
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Preise bearbeiten<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Menues/Edit">Restaurant</a></li>                            
                            <li><a href="/Spa/Index">Spa - Wellness</a></li>                            
                            <li role="separator" class="divider"></li>
                            <li><a href="/Zimmer/zimmerListe">Zimmer</a></li>
                            <li><a href="/Sortiment/Speciale">Specials</a></li>  
                            <li><a href="/Zimmer/AusstattungListe">Ausstattung</a></li>
                            <li><a href="/Ort/LandListe">Laender</a></li>                            
                        </ul>
                    </li>                                    
                </ul>
                
                <ul class="nav navbar-nav navbar-right">
                    @if (Context.User.Identity.IsAuthenticated)
                    {
                    <li class="active"><a href="/Authentifizierung/Logout">Logout <span class="sr-only">(current)</span></a></li>
                    }
                </ul>
            </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p></p>
        </footer>
    </div>   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
