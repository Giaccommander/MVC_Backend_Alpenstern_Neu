@model List<Alpenstern_BackEnd_Neu.Models.RueckrufVM>


@{
    ViewBag.Title = "Index";
}

<form action="/Rueckruf/RueckrufNeu" method="get">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Rückruf Funktion</h2>
                <div class="col-lg-2"><h4>Anz.</h4></div>
                <div class="col-lg-2"><h4>Name</h4></div>
                <div class="col-lg-2"><h4>Grund</h4></div>
                <div class="col-lg-2"><h4>Datum</h4></div>
                <div class="col-lg-2"><h4>Telefon</h4></div>
                <div class="col-lg-2"><h4>Bearbeiten</h4></div>
            </div>
        </div>
        @{
            int anz = 0;
            foreach (var x in Model)
            {
                if (x.datumErledigt == null)
                {
                    anz++;
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-2">
                                <p>@anz</p>
                            </div>
                            <div class="col-lg-2">
                                <p>@x.name</p>
                            </div>
                            <div class="col-lg-2">
                                <p>@x.grund</p>
                            </div>
                            <div class="col-lg-2">
                                <p>@x.datumWann</p>
                            </div>
                            <div class="col-lg-2">
                                <p>@x.telefon</p>
                            </div>
                            <div class="col-lg-2">
                                @Html.ActionLink("Bearbeiten", "rueckrufBearbeiten", new { id = x.id }, null)
                            </div>
                        </div>
                    </div>
                }               
            }
        }
        <div class="row">
            <div class="col-lg-2" style="padding:10px 0px 0px 10px;">
                <input type="submit" name="neu_erstellen" value="Neuen Rückruf erstellen" />
            </div>
            <div class="col-lg-8"></div>            
        </div>
    </div>
</form>
