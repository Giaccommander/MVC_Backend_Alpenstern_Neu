                                    <li><a href="/Sortiment/Speciale">Specials<span class="sr-only">(current)</span></a></li>
                                </ul>
                            </li>
                            <li class="active"><a href="/Authentifizierung/Logout">Logout <span class="sr-only">(current)</span></a></li>
                        </ul>
                    
                    }
                </ul>
            </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p></p>
        </footer>
    </div>   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
